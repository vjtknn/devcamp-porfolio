.container.portfolio-container
  .row
    .col-md-8
      =image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%'
    .col-md-4
      %h2
        =@portfolio_item.title
      %h4
        %em
          =@portfolio_item.subtitle
      %p
        =@portfolio_item.body
      %h2 Technologies used:
      -@portfolio_item.technologies.each do |technology|
        %p
          =technology.name
      -if logged_in?(:site_admin)
        =link_to 'Edit item', edit_portfolio_path(@portfolio_item), class: 'btn btn-outline-primary btn-block'
