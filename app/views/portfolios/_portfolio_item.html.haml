%h2
  =link_to portfolio_item.title, portfolio_show_path(portfolio_item)
%p
  =portfolio_item.subtitle
%p
  =portfolio_item.body
-unless portfolio_item.thumb_image.nil?
  %img(src="#{portfolio_item.thumb_image}")
=link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)
=link_to "Delete", portfolio_item,
method: :delete, data: { confitm: "Are you sure"} if logged_in?(:site_admin)
