%h1 Portfolio Items:
=link_to "Create new portfolio item", new_portfolio_path

-@portfolio_items.each do |portfolio_item|
  %p
    =portfolio_item.title
  %p
    =portfolio_item.subtitle
  %p
    =portfolio_item.body
  -unless portfolio_item.thumb_image.nil?
    %img(src="#{portfolio_item.thumb_image}")
  =link_to "Edit", edit_portfolio_path(portfolio_item.id)

  %hr
