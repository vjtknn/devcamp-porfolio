<tr>
  <td><%= post.title.upcase %></td>
  <td>Published: <%= distance_of_time_in_words(post.created_at, Time.now) %> ago</td>
  <td><%= post.body %></td>
  <td><%= link_to post.status, toggle_status_post_path(post) if logged_in?(:site_admin)%></td>
  <td><%= link_to 'Show', post %></td>
  <td><%= link_to 'Edit', edit_post_path(post) if logged_in?(:site_admin)%></td>
  <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%></td>
</tr>
